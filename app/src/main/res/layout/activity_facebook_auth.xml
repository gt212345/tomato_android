<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.itri.tomato.Activities.FacebookAuthActivity">

    <Button
        android:id="@+id/login_button_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:text="Enable"/>

    <ImageView
        android:id="@+id/fbIcon"
        android:src="@drawable/fb_auth"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Facebook is a social networking website launched in Feb 2004.
         Users may create a personal profile, add other users as friends, and exchange messages, including automatic notifications when they update their profile"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/fbIcon"
        android:layout_toRightOf="@+id/fbIcon"
        android:layout_toEndOf="@+id/login_button_fb" />


</RelativeLayout>
